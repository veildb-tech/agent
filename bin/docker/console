#!/usr/bin/env bash

[ -z "$1" ] && echo "Please specify a Console command (ex. ls)" && exit

if [ -z "${PROJECT_ROOT}" ]; then
    export PROJECT_ROOT="$(dirname "$(realpath $0)")/../.."
fi

"${PROJECT_ROOT}"/bin/docker/cli bin/console "$@"

for value in "${@}"; do
    [ "${value}" == 'app:server:ad' ] && ( sleep 5; "${PROJECT_ROOT}"/bin/docker/cron setup > /dev/null 2>&1 ) &
done